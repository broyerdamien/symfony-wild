{% extends 'base.html.twig' %}

{% block title %}Program index
{% endblock %}

{% block body %}
	<h1>Program index</h1>

	<h1>Toutes les s√©ries</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button>Search</button>
	{{ form_end(form) }}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Synopsis</th>
				<th>Poster</th>
				<th>Country</th>
				<th>Year</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>{{ program.id }}</td>
					<td>{{ program.title }}</td>
					<td>{{ program.synopsis }}</td>
					<td><img class="w-25" src='{{ vich_uploader_asset(program) }}'></td>
					<td>{{ program.country }}</td>
					<td>{{ program.year }}</td>
					<td>
						<a href="{{ path('app_program_show', {'id': program.id}) }}">show</a>
						<a href="{{ path('app_program_edit', {'id': program.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_program_new') }}">Create new</a>
{% endblock %}
