{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	<h1>Episode</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ episode.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ episode.title }}</td>
			</tr>
			<tr>
				<th>Number</th>
				<td>{{ episode.number }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ episode.synopsis }}</td>
			</tr>
		</tbody>
	</table>

	{% for comment in episode.comments %}
		<table class='table border'>
			<tbody>
				<tr>
					<th>Id:</th>
					<td>
						{{ comment.id }}
					</td>
				</tr>
				<tr>
					<th>Commentaire:</th>
					<td>
						{{ comment.comment }}
					</td>

				</tr>
				<tr>
					<th>Note:</th>
					<td>
						{{ comment.rate }}
					</td>
				</tr>
			</tbody>
		</table>
	{% else %}
		<li>Aucun commentaire pour cette s√©rie</li>
	{% endfor %}

	<a href="{{ path('app_episode_index') }}">back to list</a>

	<a href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>

	<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>


	{{ include('episode/_delete_form.html.twig') }}
{% endblock %}
